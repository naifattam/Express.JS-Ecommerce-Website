<%- include("../../../partials/header") %>
    <div class="container-fluid" style="padding: 0px;">
        <div class="row">
            <div class="col-md-3">
                <div class="card" style="width: 18rem; height: 91.5vh; border-radius: 0; top: 0;">
                    <h2 class="card-title" style="padding: 10px;">Admin Panel</h2>
                    <ul class="list-group list-group-flush" style="padding-top: 50px;">
                        <a href="/user/admin/products"><li class="list-group-item"><i class="fas fa-th"></i> All Products</li></a>
                        <a href="/user/admin/users"><li class="list-group-item"><i class="fas fa-users"></i> All Users</li></a>
                        <a href="/user/admin/categories"><li class="list-group-item"><i class="fas fa-list-alt"></i> All Categories</li></a>
                        <a href="/user/admin/orders"><li class="list-group-item"><i class="fas fa-cart-arrow-down"></i> All Orders</li></a>
                      <br>
                      <a href="/user/admin/add_product"><li class="list-group-item"><i class="fas fa-plus-square"></i> Add Product</li></a>
                      <a href="/user/admin/add_user"><li class="list-group-item"><i class="fas fa-plus-square"></i> Add User</li></a>
                      <a href="/user/admin/add_product"><li class="list-group-item"><i class="fas fa-plus-square"></i> Add Category</li></a>
                      <br>
                    </ul>
                </div>
            </div>
            <div class="col-md-9 text-center" style="padding-top: 50px;">
                <h2>All Users</h2>
                <br>
                <table class="table">
                    <thead>
                        <tr>
                        <th scope="col">Avatar</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Username</th>
                        <th scope="col">Email Address</th>
                        <th scope="col">Status</th>
                        <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.forEach(user => { %>
                            <tr>
                                <td>
                                    <img src="<%= user.avatar %>.png" alt="">
                                </td>
                                <td><%= user.firstName %></td>
                                <td><%= user.lastName %></td>
                                <td><%= user.username %></td>
                                <td><%= user.email %></td>
                                <td>
                                    <% if(user.isAdmin == true) { %>
                                        Admin
                                    <% } else { %>
                                        Member
                                    <% } %>
                                </td>
                                <td>
                                    <a href="/user/admin/edit_user?email=<%= user.email %>" class="btn btn-primary">Edit</a>
                                    <a href="/user/admin/remove_user?email=<%= user.email %>" class="btn btn-danger">Remove</a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
<%- include("../../../partials/footer") %>