<%- include("../partials/header") %>
    <div class="container" style="margin-top: 50px;">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body text-center">
                        <img src="<%= locals.avatar %>.png" alt="">
                        <h2 class="card-title"><%= locals.fname %> <%= locals.lname %></h2>
                        <p class="card-subtitle text-muted">@<%=locals.name %></p>
                        <a href="/user/products" class="btn btn-primary" style="margin-bottom: 70px;">My Products</a>
                    </div>
                    <form action="/user/update/fname" method="post">
                        <div class="mb-3">
                            <label for="" class="form-label">Update First Name</label>
                            <div class="input-group mb-3">
                                <input type="text" class="form-control" name="firstName" required value="<%=locals.fname%>">
                                <div class="input-group-append">
                                    <button class="btn btn-primary" type="submit">Update</button>
                                </div>
                            </div>                            
                        </div>
                    </form>
                    <form action="/user/update/lname" method="post">
                        <div class="mb-3">
                            <label for="" class="form-label">Update Last Name</label>
                            <div class="input-group mb-3">
                                <input type="text" class="form-control" name="lastName" required value="<%=locals.lname%>">
                                <div class="input-group-append">
                                    <button class="btn btn-primary" type="submit">Update</button>                                </div>
                            </div>                            
                        </div>
                    </form>
                    <form action="/user/update/username" method="post">
                        <div class="mb-3">
                            <label for="" class="form-label">Update Username</label>
                            <div class="input-group mb-3">
                                <input type="text" class="form-control" name="username" required value="<%=locals.name%>">
                                <div class="input-group-append">
                                    <button class="btn btn-primary" type="submit">Update</button>                                </div>
                            </div>                            
                        </div>
                    </form>
                    <form action="/user/update/email" method="post">
                        <div class="mb-3">
                            <label for="" class="form-label">Update Email Address</label>
                            <div class="input-group mb-3">
                                <input type="email" class="form-control" name="email" required value="<%=locals.email%>">
                                <div class="input-group-append">
                                    <button class="btn btn-primary" type="submit">Update</button>                                </div>
                            </div>                            
                        </div>
                    </form>
                    <form action="/user/update/password" method="post">
                        <div class="mb-3">
                            <label for="" class="form-label">Update Password</label>
                            <div class="input-group mb-3">
                                <input type="password" class="form-control" name="password" required>
                                <div class="input-group-append">
                                    <button class="btn btn-primary" type="submit">Update</button>                                </div>
                            </div>                            
                        </div>
                    </form>
                    <form action="/user/update/avatar" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="" class="form-label">Update Profile Picture</label>
                            <div class="input-group mb-3">
                                <input type="file" name="file" id="" class="form-control" required>
                                <div class="input-group-append">
                                    <button class="btn btn-primary" type="submit">Update</button>                                </div>
                            </div>                            
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
<%- include("../partials/footer") %>